#!/bin/bash

# ~/setup_shell.sh
# ============================================================

# {{- if and .is_linux (not .is_macos) }}

command_exists() {
    command -v "$@" >/dev/null 2>&1
}

main() {
    printf -- "\n%s=== Setting up Zsh... ===%s\n"

    # Install Zsh
    if ! command_exists zsh; then
        printf -- "%sInstalling Zsh...%s\n"
        which apt 2> /dev/null
        if [ $? -eq 0 ]; then
            sudo apt install -y zsh
        else
            sudo dnf install -y zsh
        fi
    fi

    printf -- "%sSet Zsh as the default shell...%s\n"
    command -v zsh | sudo tee -a /etc/shells
    sudo chsh -s "$(command -v zsh)" "${USER}"

    # Install Sheldon
    printf -- "%sInstalling Sheldon...%s\n"
    wget -qO- https://rossmacarthur.github.io/install/crate.sh \
        | bash -s -- --repo rossmacarthur/sheldon --to ~/.local/bin
}

main "$@"

# {{- end }}
