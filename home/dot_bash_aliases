# ~/.bash_aliases
# ============================================================

alias vi='vim'
alias history='history -i'

# ls
if command -v eza > /dev/null 2>&1; then
  alias eza='eza -F --icons'
  alias ls='eza'
  alias la='eza -a'
  alias ll='eza -aghl'
else
  alias ls='ls -FG'
  alias la='ls -A'
  alias ll='ls -Al'
fi

# cat
if command -v bat > /dev/null 2>&1; then
  alias cat='bat'
fi
