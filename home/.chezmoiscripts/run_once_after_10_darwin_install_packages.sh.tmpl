#!/bin/sh

# ~/install_packages.sh
# ============================================================

# {{- if .is_macos }}

command_exists() {
    command -v "$@" >/dev/null 2>&1
}

main() {
    printf -- "\n%s=== Install packages using Homebrew... ===%s\n"

    # Install packages
    if command_exists brew; then
        brew doctor
        brew upgrade
        brew bundle --global
        brew cleanup
    else
        printf -- "%sHomebrew not installed.%s\n"
        exit 0
    fi

}

main "$@"

# {{- end }}
