#!/bin/bash

# ~/update.sh
# ============================================================

# {{- if and (not .is_macos) (not .is_windows) (not .is_devcontainer) -}}

printf -- "Update packages...\n"

which apt 2> /dev/null
if [ $? -eq 0 ]; then
    sudo apt -y update
    sudo apt -y upgrade
else
    sudo yum -y update
    sudo yum -y upgrade
fi

# {{- end }}
