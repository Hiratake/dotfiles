# ~/.bash_aliases
# ============================================================

alias vi='vim'
alias history='history -i'

# ls
if command -v exa > /dev/null 2>&1; then
    alias exa='exa -F --icons'
    alias ls='exa'
    alias la='exa -a'
    alias ll='exa -aghl'
else
    alias ls='ls -FG'
    alias la='ls -A'
    alias ll='ls -Al'
fi

# cat
if command -v bat > /dev/null 2>&1; then
    alias cat='bat'
fi
