#!/bin/bash

# ~/update.sh
# ============================================================

# {{- if and (not .is_macos) (not .is_windows) (not .is_devcontainer) }}

printf -- "\n%s=== Update packages... ===%s\n"

which apt 2> /dev/null
if [ $? -eq 0 ]; then
    printf -- "%sUpdating packages using apt...%s\n"
    sudo apt -y update
    sudo apt -y upgrade
else
    printf -- "%sUpdating packages using yum...%s\n"
    sudo yum -y update
    sudo yum -y upgrade
fi

# {{- end }}
